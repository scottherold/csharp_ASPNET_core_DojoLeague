@model Ninja

<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 rounded justify-content-center m-4 bg-white">
        <div class="row justify-content-center m-3">
            <div class="col-lg-6 mt-3 mb-3 border-right border-dark bg-white text-center">
                <h3 class="mt-1 mb-4">Registered Ninjas</h3>
                <table class="table table-striped table-hover table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Ninja Name</th>
                            <th scope="col">Home dojo</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var ninja in @ViewBag.allNinjas)
                    {
                        <tr>
                            <td><a href="/ninjas/@ninja.ninja_id" class="text-dark">@ninja.name</a></td>
                            @if (ninja.dojo_id == null)
                            {
                                <td>Rogue</td>
                            }
                            else
                            {
                                <td><a href="/dojo/@ninja.dojo.dojo_id" class="text-dark">@ninja.dojo.name</a></td>
                            }
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6 mt-3 mb-3 border-left border-dark bg-white text-center">
                <h3 class="mt-1 mb-4">Register a Ninja</h3>
                <form asp-action="CreateNinja" asp-controller="Main" method="POST">
                    <div class="row mb-2">
                        <div class="col-md-5 text-left">
                            <label asp-for="name"><h5>Ninja Name:</h5></label>
                        </div>
                        <div class="col-lg-5 justify-content-start">
                            <input type="text" asp-for="name">
                            <p><span asp-validation-for="name" class="text-danger"></span></p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-5 text-left">
                            <label asp-for="level"><h5>Ninjaing Level:</h5></label>
                        </div>
                        <div class="col-lg-5 justify-content-start">
                            <select asp-for="level" class="w-100">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                            <p><span asp-validation-for="level" class="text-danger"></span></p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-5 text-left">
                            <!-- You need to figure out how to add Dojo stuff to the form... -->
                            <label asp-for="dojo_id"><h5>Home Dojo:</h5></label>
                        </div>
                        <div class="col-lg-5 justify-content-start">
                            <select asp-for="dojo_id" class="w-100">
                                <option value="">Rogue</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 text-left">
                            <label asp-for="description"><h5>Description:</h5></label>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-12 justify-content-start">
                            <textarea class="w-100" asp-for="description" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-center">
                        <button type="submit" class="btn btn-dark">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>