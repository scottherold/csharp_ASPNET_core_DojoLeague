@model Dojo
<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 rounded justify-content-center m-4 bg-white">
        <div class="row justify-content-center m-3">
            <h3 class="mt-1 mb-4">Dojo Information</h3>
        </div>
        <div class="row m-3">
            <div class="col-md-12 text-center">
                <h5>@Model.name</h5>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-md-3 text-left">
                <h5>Location:</h5>
            </div>
            <div class="col-md-9 justify-content-start">
                <h6>@Model.location</h6>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-md-3 text-left">
                <h5>Information:</h5>
            </div>
            <div class="col-md-9 justify-content-start">
                <h6>@Model.description</h6>
            </div>
        </div>
        <div class="row justify-content-center m-3">
            <div class="col-lg-6 my-2 justify-content-center">
                <h3 class="mt-1 mb-4">Current Members</h3>
                <table class="table table-striped table-hover table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Ninja</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ninja in ViewBag.ninjaDojoList)
                        {
                            <tr>
                                <td><a href="/ninjas/@ninja.ninja_id" class="text-dark">@ninja.name</a></td>
                                <td><a href="/banish/@Model.dojo_id/@ninja.ninja_id" class="text-dark">Banish!</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6 my-2 justify-content-center">
                <h3 class="mt-1 mb-4">Rogue Ninjas</h3>
                <table class="table table-striped table-hover table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Ninja</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var rougeNinja in ViewBag.rougeNinjas)
                    {
                        <tr>
                            <td><a href="/ninjas/@rougeNinja.ninja_id" class="text-dark">@rougeNinja.name</a></td>
                            <td><a href="/recruit/@Model.dojo_id/@rougeNinja.ninja_id" class="text-dark">Recruit!</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>